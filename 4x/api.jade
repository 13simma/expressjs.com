doctype html
html
  head
    title Express - api reference
    include ../includes/head
  body
    section.content
      header
        - active = 'api'
        include ../includes/header
      include ../includes/mixins
      include ./en/api/menu
      #overlay

      #api-doc

        h1 4.x API
        h2 Application
        a(id='application')
        section
          h3(id='express') express()
          include:md ./en/api/express.md
        include ./en/api/app

        h2 Request
        a(id='request')
        include ./en/api/req

        h2 Response
        a(id='response')
        include ./en/api/res

        h2 Router
        a(id='router')
        include ./en/api/router

        h2 Middleware
        a(id='middleware')
        include ./en/api/middleware

    include ../includes/footer
