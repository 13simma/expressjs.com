doctype html
html
  head
    title Express - api reference
    include ../includes/head
  body
    section.content
      header
        - active = 'api'
        include ../includes/header
      include ../includes/mixins
      include ./en/api/menu
      #overlay

      #api-doc

        h1 3.x API
        h2 Application
        a(name='application')
